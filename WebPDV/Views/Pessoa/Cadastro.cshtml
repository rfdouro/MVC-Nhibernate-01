@{
    Layout = null;
}

<style>
    label, input {
        display: block;
    }

        input.text {
            margin-bottom: 12px;
            width: 95%;
            padding: .4em;
        }

    fieldset {
        padding: 0;
        border: 0;
        margin-top: 25px;
    }

    h1 {
        font-size: 1.2em;
        margin: .6em 0;
    }

    div#users-contain {
        width: 350px;
        margin: 20px 0;
    }

        div#users-contain table {
            margin: 1em 0;
            border-collapse: collapse;
            width: 100%;
        }

            div#users-contain table td, div#users-contain table th {
                border: 1px solid #eee;
                padding: .6em 10px;
                text-align: left;
            }

    .ui-dialog .ui-state-error {
        padding: .3em;
    }

    .validateTips {
        border: 1px solid transparent;
        padding: 0.3em;
    }
</style>

<div id="dialog-form" title="Create new user" style="width:500px">
    <p class="validateTips">Todos os campos são requeridos.</p>

    <form action="/Pessoa/Adiciona" id="formCadastro">
        <fieldset>
            <label for="nome">Nome</label>
            <input type="text" name="nome" id="nome" value="" style="width:50%;" class="text ui-widget-content ui-corner-all">

            <label for="nome">SobreNome</label>
            <input type="text" name="sobrenome" id="sobrenome" value="" class="text ui-widget-content ui-corner-all">

            <label for="nome">Idade</label>
            <input type="text" name="idade" id="idade" value="" style="width:20%;" class="text ui-widget-content ui-corner-all">

            <input type="submit" value="Salvar" id="btnSalvar"/>

            <!-- Allow form submission with keyboard without duplicating the dialog button -->
            <!--input type="button" tabindex="-1" style="position:absolute; top:-1000px" id="btnSalvar" value="Salvar" /-->

        </fieldset>
    </form>
</div>

<script>
    $("#btnSalvar").button();

    $("#formCadastro").submit(function (e) {
        //desabilita o evento padrão de submissão de formulário
        e.preventDefault();
        //pega todos os dados do formulário
        var formData = $(this).serialize();

        

        utilJSPUI.executaAcao('/Pessoa/Adiciona', formData, "POST", "atualizaTabela(); utilJSPUI.fechaDialogo('dialog')");
        //atualizaTabela();


        return false;
    });

</script>
