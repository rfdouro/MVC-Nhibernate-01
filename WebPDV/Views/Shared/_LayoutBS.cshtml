<body onload="escondeSplash()" onsubmit="mostraSplash()">
    <div id="telaSplash">
        <div id="divInternoSplash">
            <img src="~/Images/imagens/loaders/ajax-loader4.gif" alt="Carregando Página" style="position:absolute; top:50%; left:50%; margin-left: -32px; margin-top:-20px" />
            <!-- <i class="fa fa-refresh fa-spin fa-3x fa-fw" style="position:absolute; top:50%; left:50%; margin-left: -100px"></i>-->
            <span style="color:red; position:absolute; top:50%; left:50%; margin-top: -70px; margin-left: -35px"><br>Processando</span>
        </div>
    </div>
    <div class="container-fluid">
        @RenderPage("menuSuperior.cshtml")

        <div class="alert alert-success" style="width: 100%; font-size: large; text-align: center; margin-top: -20px; padding: 5px;">
            @RenderSection("tituloInternoPagina", false)
        </div>

        @RenderBody()

        <div id="dialog" class="modal fade" role="dialog" style="height: 100%; overflow-y: auto">
            <div class="modal-dialog" style="width: 90%">
                <div class="modal-content">
                    <div class="modal-header ui-widget-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="fa fa-close"></span></button>
                        <h4 class="modal-title" id="dialogTitle">...</h4>
                    </div>
                    <div class="modal-body">
                        <div class="bootstrap-iso">
                            <div class="container-fluid" id="dialogContent">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-warning" id="btnCloseDialog" onclick="utilJS.fechaModal('dialog')">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $.ajaxSetup({cache: false});
            $(document).ajaxStart(function () {
                mostraSplash();//$("#telaSplash").css("display", "block");
            });
            $(document).ajaxComplete(function () {
                escondeSplash();//$("#telaSplash").css("display", "none");
            });
            //exibeToast("titulo", "mensagem", 2);
            //exibeGrowl("titulo", "mensagem");
